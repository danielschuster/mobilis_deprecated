<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ScrollView
		android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    >
	
		<TextView
	        android:id="@+id/label_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Group name:"
	        />
	    <EditText
	        android:id="@+id/edittext_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:drawable/editbox_background"
	        />
	        
	    <TextView
	        android:id="@+id/label_description"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Description:"
	        />
	    <EditText
	        android:id="@+id/edittext_description"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:drawable/editbox_background"
	        />
	            
	    <TextView
	        android:id="@+id/label_address"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Address:"
	        />
	    <EditText
	        android:id="@+id/edittext_address"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:drawable/editbox_background"
	        />
	    
	    <TextView
	        android:id="@+id/label_latitude"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Latitude (in microdegrees):"
	        />
	    <EditText
	        android:id="@+id/edittext_latitude"
	        android:numeric="decimal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:drawable/editbox_background"
	        />        
	         
	    <TextView
	        android:id="@+id/label_longitude"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Longitude (in microdegrees):"
	        />
	    <EditText
	        android:id="@+id/edittext_longitude"
	        android:numeric="decimal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:drawable/editbox_background"
	        /> 
	                  
	    <TextView
	        android:id="@+id/label_visibilityradius"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Visibility radius (in m):"
	        />
	    <EditText
	        android:id="@+id/edittext_visibilityradius"
	        android:numeric="decimal"
	        android:text="0"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:drawable/editbox_background"
	        />
	    <TextView
	        android:id="@+id/label_joinradius"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Join radius (in m):"
	        />
	    <EditText
	        android:id="@+id/edittext_joinradius"
	        android:numeric="decimal"
	        android:text="0"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:drawable/editbox_background"
	        />
	        
	        
	    <TextView
	        android:id="@+id/label_starttime"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Start date:"
	        />   
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	>	    
	    	<CheckBox
	    		android:id="@+id/checkbox_starttime"
	    		android:text="dd.mm.yyyy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="false"
				/>	    
		    <Button android:id="@+id/button_pickDate_starttime"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Change date"
		        android:layout_alignParentRight="true"
		        android:enabled="false"
		        />
	    </RelativeLayout>
	      
	      
	    <TextView
	        android:id="@+id/label_endtime"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="End date:"
	        />   
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	>	    
	    	<CheckBox
	    		android:id="@+id/checkbox_endtime"
	    		android:text="dd.mm.yyyy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="false"
				/>	    
		    <Button android:id="@+id/button_pickDate_endtime"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Change date"
		        android:layout_alignParentRight="true"
		        android:enabled="false"
		        />
	    </RelativeLayout>
	      
	    
	    <TextView
	        android:id="@+id/label_startjointime"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Start join date:"
	        />   
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	>	    
	    	<CheckBox
	    		android:id="@+id/checkbox_startjointime"
	    		android:text="dd.mm.yyyy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="false"
				/>	    
		    <Button android:id="@+id/button_pickDate_startjointime"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Change date"
		        android:layout_alignParentRight="true"
		        android:enabled="false"
		        />
	    </RelativeLayout>  
	      
	      
	    <TextView
	        android:id="@+id/label_endjointime"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="End join date:"
	        />   
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	>	    
	    	<CheckBox
	    		android:id="@+id/checkbox_endjointime"
	    		android:text="dd.mm.yyyy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="false"
				/>	    
		    <Button android:id="@+id/button_pickDate_endjointime"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Change date"
		        android:layout_alignParentRight="true"
		        android:enabled="false"		       
		        />
	    </RelativeLayout>  
	      
	             
		<TextView
	        android:id="@+id/label_privacy"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Privacy:"
	        />
	    <Spinner 
	        android:id="@+id/spinner_privacy"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="true"
	        android:prompt="@string/spinner_privacy"
	        />	       
	        
	    <TextView
	        android:id="@+id/label_link"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Link:"
	        />
	    <EditText
	        android:id="@+id/edittext_link"
	        android:text="http://"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:drawable/editbox_background"
	        />
	        
	    <Button
	    	android:text="Create Group"
	    	android:id="@+id/button_create_group" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/edittext_link"
	    	/>
	  
	</LinearLayout>

</ScrollView>

</LinearLayout>

