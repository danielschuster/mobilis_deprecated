<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="de.tudresden.inf.rn.mobilis.groups"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon64" android:label="@string/app_name" android:debuggable="true">
    
    	<uses-library android:name="com.google.android.maps" />
        <activity android:name=".activities.MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PrefActivity" android:label="@string/app_name" >
        </activity>
        <activity android:name=".activities.FriendsActivity" android:label="@string/app_name" >
        </activity>
        <activity android:name=".activities.GroupsActivity" android:label="@string/app_name" >
        </activity>
        <activity android:name=".activities.GroupCreateActivity" android:label="@string/app_name" >
        </activity>
        <activity android:name=".activities.GroupInfoActivity" android:label="@string/app_name" >
        </activity>
        <activity android:name=".activities.MemberInfoActivity" android:label="@string/app_name" >
        </activity>
        <activity android:name=".activities.MUCActivity" android:label="@string/app_name" >
        </activity>

    </application>
    <uses-sdk android:minSdkVersion="3" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
</manifest> 
