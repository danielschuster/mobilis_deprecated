<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/buddylist_lay"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<!-- only for background -->
	<FrameLayout android:id="@+id/buddylist_head_bg"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:id="@+id/headtext0" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="16sp"
			android:padding="2px" style="?android:attr/listSeparatorTextViewStyle" />

		<LinearLayout android:id="@+id/buddylist_head_layer"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView android:id="@+id/buddylist_headtext1"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="12sp" android:width="48px" style="?android:attr/listSeparatorTextViewStyle" />
			<LinearLayout android:id="@+id/buddylist_head_layer2"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1">
				<TextView android:id="@+id/buddylist_headtext2"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="@string/buddylist_head_id" android:textSize="12sp" android:textColor="#000000" 
					android:paddingTop="5px" style="?android:attr/listSeparatorTextViewStyle"/>
			</LinearLayout>

			<LinearLayout android:id="@+id/buddylist_head_layer3"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="right">
				<TextView android:id="@+id/buddylist_headtext4"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="12sp" android:text="@string/buddylist_head_track" android:textColor="#000000" 
					android:paddingTop="5px" android:paddingRight="5px" style="?android:attr/listSeparatorTextViewStyle"/>
			</LinearLayout>

		</LinearLayout>
	</FrameLayout>

	<de.tudresden.inf.rn.mobilis.android.buddylist.CheckListView 
		android:id="@id/android:list" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_weight="1" />

</LinearLayout>